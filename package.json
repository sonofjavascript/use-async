{
  "name": "@sonofjs/use-async",
  "author": "Albert Pérez Farrés",
  "version": "1.0.0",
  "description": "*useReducer* hook's extension to manage asynchronous actions over application's state through http requests.",
  "main": "lib/index.js",
  "scripts": {
    "build": "BABEL_ENV=production babel src -d lib",
    "test:dev": "jest --watchAll",
    "test": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "linter-fix": "standard --fix",
    "linter-check": "standard"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sonofjavascript/use-async.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "useReducer",
    "async",
    "http",
    "actions",
    "hooks",
    "react",
    "axios",
    "fetch",
    "asynchronous"
  ],
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js",
      "./src/**/*.jsx",
      "!**/**/index.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "./coverage"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.3.0",
    "babel-preset-minify": "^0.5.1",
    "coveralls": "^3.1.0",
    "jest": "^26.0.1",
    "react-dom": "^16.13.1",
    "standard": "^14.3.4"
  }
}
